@model ExamMinEdu.Models.Url

@{
    ViewBag.Title = "Crear nueva URL";
}

<h2>Crear nueva URL</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Url</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.Titulo)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Titulo)
            @Html.ValidationMessageFor(model => model.Titulo)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.UrlOrigen)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UrlOrigen)
            @Html.ValidationMessageFor(model => model.UrlOrigen)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.UrlDestino)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.UrlDestino)
            @Html.ValidationMessageFor(model => model.UrlDestino)
        </div>

        <p>
            <input type="submit" value="Crear" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Regresar a la Lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
